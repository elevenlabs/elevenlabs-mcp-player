{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "declaration": false,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["server.ts", "src/server-utils.ts"],
  "exclude": ["node_modules", "dist", "src/mcp-app.tsx", "src/components", "src/lib"]
}
